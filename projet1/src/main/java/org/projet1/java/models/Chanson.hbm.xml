<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.projet1.java.models">
	<class name="Chanson" table="CHANSON">

		
		<id name="numChanson" type="integer">
			<column name="NUM_CHANSON" />
			<generator class="identity" />
		</id>
		
		<property name="titre" type="string">
			<column name="TITRE" length="80"/>
		</property>
		
		
		<property name="dureeChanson" type="integer">
			<column name="DUREE_CHANSON" length="80"/>
		</property>

	</class>  
	
	
</hibernate-mapping>