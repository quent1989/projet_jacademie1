<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.projet1.java.models">
	<class name="Artiste" table="ARTISTE">

		
		<id name="codeArtiste" type="integer">
			<column name="CODE_ARTISTE" />
			<generator class="identity" />
		</id>
		
		<property name="nom" type="string">
			<column name="NOM_ARTISTE" length="80"/>
		</property>
		
		
		<property name="album" type="string">
			<column name="NOM_ALBUM" length="80"/>
		</property>
		
		

	</class>  
	
	
</hibernate-mapping>