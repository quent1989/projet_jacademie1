<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.projet1.java.models">
	<class name="Album" table="ALBUM">

		
		<id name="codeAlbum" type="integer">
			<column name="CODE_ALBUM" />
			<generator class="identity" />
		</id>
		
		<property name="nom" type="string">
			<column name="NOM_ALBUM" length="80"/>
		</property>
		
		<bag name="listeChansons" lazy="false" cascade="all,delete-orphan">
			<key column="LISTE_CHANSONS" not-null="true" />
			<one-to-many class="Chanson" />
		</bag>
		
		

	</class>  
	
	
</hibernate-mapping>