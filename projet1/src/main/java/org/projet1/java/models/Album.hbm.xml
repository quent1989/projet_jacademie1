<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.projet1.java.models">
	<class name="Album" table="ALBUM">

		
		<id name="codeAlbum" type="integer">
			<column name="CODE_ALBUM" />
			<generator class="identity" />
		</id>
		
		<property name="nom" type="string">
			<column name="NOM_ALBUM" length="80"/>
		</property>
		
		<many-to-one name="chanson" class="Chanson" column="TITRE"
			lazy="false" />
		


	</class>  
	
	
</hibernate-mapping>